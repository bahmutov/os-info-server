{
  "name": "os-info-server",
  "description": "Small Node server that reports available OS parameters, like free memory and CPU load",
  "version": "0.0.0-semantic-release",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/os-info-server/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "bin": {
    "os-info-server": "src/index.js"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/os-info-server#readme",
  "keywords": [
    "cpu",
    "load",
    "memory",
    "os",
    "server",
    "utility"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/os-info-server.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok",
    "format": "standard-format -w src/*.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prod-test": "curl $NOW_URL",
    "start": "node ."
  },
  "dependencies": {
    "pretty-bytes": "4.0.2",
    "pretty-ms": "2.1.0"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "deps-ok": "1.2.1",
    "git-issues": "1.3.1",
    "license-checker": "8.0.4",
    "mocha": "3.5.0",
    "nsp": "2.7.0",
    "pre-git": "3.15.3",
    "semantic-release": "^4.3.5",
    "standard": "8.6.0",
    "standard-format": "2.2.4"
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
